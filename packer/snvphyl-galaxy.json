{
  "provisioners": [
    {
      "type": "file",
      "source": "python/install-workflow-tools.py",
      "destination": "/tmp/install-workflow-tools.py"
    },
    {
      "type": "file",
      "source": "../docs/workflows",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/galaxy.sh",
            "scripts/cleanup.sh"
          ]
        },
        "qemu": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/galaxy.sh",
            "scripts/cleanup.sh"
          ]
        }

      }
    }

  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "headless" : true,
      "vm_name": "snvphyl-galaxy",
      "boot_wait": "10s",
      "disk_size": 1000000,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "6de9af03a5f6df1a4e5956646ebaed675f0559c6",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirror.its.sfu.ca/mirror/CentOS/7/isos/x86_64/CentOS-7-x86_64-DVD-1511.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "4" ],
	[ "modifyvm", "{{.Name}}", "--natpf1", "guest_ssh,tcp,,42222,,22" ],
	[ "modifyvm", "{{.Name}}", "--natpf1", "guest_galaxy,tcp,,48888,,8080" ]
      ]
    },
    {
      "type": "qemu",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "headless" : true,
      "vm_name": "snvphyl-galaxy",
      "boot_wait": "10s",
      "disk_size": 160000,
      "format": "qcow2",
      "accelerator": "kvm",
      "http_directory": "http",
      "iso_checksum": "6de9af03a5f6df1a4e5956646ebaed675f0559c6",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirror.its.sfu.ca/mirror/CentOS/7/isos/x86_64/CentOS-7-x86_64-DVD-1511.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "qemuargs": [
        [ "-smp", "4" ],
        [ "-m", "4G" ],
        [ "-redir", "tcp:42222::22" ],
        [ "-redir", "tcp:48888::8080" ]
      ]
    }

  ],
  "post-processors": [{ "output": "snvphyl-galaxy.box",
                        "keep_input_artifact": true,
                        "type": "vagrant",
                        "only": ["virtualbox-iso"]
                      }]
}
